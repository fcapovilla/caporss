-# Favorites Upload Modal Dialog

%div(class="modal fade" id="importFavoritesModal" tabindex="-1" role="dialog" aria-labelledby="importFavoritesModal" aria-hidden="true")
  .modal-dialog
    .modal-content
      .modal-header
        %button(type="button" class="close" data-dismiss="modal" aria-hidden="true")
          x
        %h4(class="modal-title")
          =t.favorites_import.title
      %form(class="upload-form" method="post" enctype="multipart/form-data" action="/favorites_upload")
        .modal-body
          %input(type="file" name="file" aria-hidden="true")
        .modal-footer
          %button(type="submit" class="btn btn-primary" aria-hidden="true")
            =t.favorites_import.upload
