-# Subscription form

%div(class="modal fade" id="subscriptionModal" tabindex="-1" role="dialog" aria-labelledby="subscriptionModal" aria-hidden="true")
  .modal-dialog
    .modal-content
      .modal-header
        =t.subscribe.subscribe
        %button(type="button" class="close" data-dismiss="modal" aria-hidden="true")
          x
      %form(id="subscriptionForm" method="get" action="#")
        .modal-body
          %label(for="subscriptionUrl")
            =t.subscribe.url
          %input(class="form-control" type="text" id="subscriptionUrl" aria-hidden="true")
          %label(for="subscriptionFolder")
            =t.subscribe.folder
          %input(class="form-control" type="text" id="subscriptionFolder" aria-hidden="true")
        .modal-footer
          %button(type="submit" id="subscribeButton" class="btn btn-primary" aria-hidden="true")
            =t.subscribe.subscribe
