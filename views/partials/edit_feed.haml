-# Edit feed form

%div(class="modal fade" id="editFeedModal" tabindex="-1" role="dialog" aria-labelledby="editFeedModal" aria-hidden="true")
  .modal-dialog
    .modal-content
      .modal-header
        =t.edit_feed.title
        %button(type="button" class="close" data-dismiss="modal" aria-hidden="true")
          x
      %form(id="editFeedForm" method="get" action="#")
        .modal-body
          %label(for="feedUrl")
            =t.edit_feed.url
          %input(class="form-control" type="text" id="feedUrl" aria-hidden="true")
          %label(for="feedFolder")
            =t.edit_feed.folder
          %input(class="form-control" type="text" id="feedFolder" aria-hidden="true")
          .checkbox
            %label(for="resetFeed")
              %input(type="checkbox" id="resetFeed")
              =t.edit_feed.reset
          #feedPSHBInfos.hide
            %table.table.table-bordered
              %tr
                %td=t.edit_feed.pshb_hub
                %td#feedPSHBHub
              %tr
                %td=t.edit_feed.pshb_topic
                %td#feedPSHBTopic
              %tr
                %td=t.edit_feed.pshb_expiration
                %td#feedPSHBExpiration
            .checkbox
              %label(for="feedUsePSHB")
                %input(type="checkbox" id="feedUsePSHB")
                =t.edit_feed.use_pshb
          %input(type="hidden" id="feedId" value="")
        .modal-footer
          %button(type="submit" id="editFeedButton" class="btn btn-primary" aria-hidden="true")
            =t.edit_feed.save
