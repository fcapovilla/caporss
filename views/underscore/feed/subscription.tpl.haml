-# Subscription underscore template
:plain
  <script id='tmpl-subscription' type='text/template'>
    <td>
      <%= feed.title %>
    </td>
    <td>
      <%= feed.unread_count %>
    </td>
    <td>
      <%= feed.last_update %>
    </td>
    <td>
      <%= feed.last_sync %>
    </td>
    <td class="text-error">
      <% if(feed.sync_error) { %>
        <%= feed.sync_error %>
      <% } %>
    </td>
    <td>
      <% if(feed.pshb_hub) { %>
        <% if(feed.pshb) { %>
          <i class="fa fa-check-square-o togglePSHBAction"></i>
        <% } else { %>
          <i class="fa fa-square-o togglePSHBAction"></i>
        <% } %>
      <% } %>
    </td>
    <td>
      <a class="btn btn-default deleteFeedAction" title="#{t.buttons.delete}"><i class="fa fa-trash-o"></i></a>
    </td>
  </script>
