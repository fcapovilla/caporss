-# Subscription List underscore template
:plain
  <script id='tmpl-subscription-list' type='text/template'>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="sortable" data-column="title">
            #{t.subscription.name}
            <% if(sortAttribute == 'title') { %>
              <i class="icon icon-sort-<%= sortDirection?'down':'up' %>"></i>
            <% } else { %>
              <i class="icon icon-sort" data-column="title"></i>
            <% } %>
          </th>
          <th class="sortable" data-column="unread_count">
            #{t.subscription.unread_count}
            <% if(sortAttribute == 'unread_count') { %>
              <i class="icon icon-sort-<%= sortDirection?'down':'up' %>"></i>
            <% } else { %>
              <i class="icon icon-sort" data-column="unread_count"></i>
            <% } %>
          </th>
          <th class="sortable" data-column="last_update">
            #{t.subscription.last_update}
            <i class="icon" data-column="last_update"></i>
            <% if(sortAttribute == 'last_update') { %>
              <i class="icon icon-sort-<%= sortDirection?'down':'up' %>"></i>
            <% } else { %>
              <i class="icon icon-sort" data-column="last_update"></i>
            <% } %>
          </th>
          <th class="sortable" data-column="sync_error">
            #{t.subscription.sync_error}
            <i class="icon" data-column="sync_error"></i>
            <% if(sortAttribute == 'sync_error') { %>
              <i class="icon icon-sort-<%= sortDirection?'down':'up' %>"></i>
            <% } else { %>
              <i class="icon icon-sort" data-column="sync_error"></i>
            <% } %>
          </th>
          <th class="sortable" data-column="pshb">
            #{t.subscription.pshb}
            <i class="icon" data-column="pshb"></i>
            <% if(sortAttribute == 'pshb') { %>
              <i class="icon icon-sort-<%= sortDirection?'down':'up' %>"></i>
            <% } else { %>
              <i class="icon icon-sort" data-column="pshb"></i>
            <% } %>
          </th>
          <th>#{t.subscription.delete}</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </script>
