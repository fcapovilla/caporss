-# Folder underscore template
:plain
  <script id='tmpl-folder' type='text/template'>
    <div onclick="" class="folder-title<% if(folder.active){ %> active <% } %>">
      <% if(folder.unread_count > 0) { %>
        <div class="folder-badge">
          <span class="badge badge-primary"><%= folder.unread_count %></span>
        </div>
      <% } %>
      <div class="folder-text">
        <div onclick="" class="folder-toggle">
          <i class="fa <% if(folder.open){ %>fa-minus-square-o<% }else{ %>fa-plus-square-o<% } %>"></i>
        </div>
        <div onclick="" class="folder-icon">
          <i class="fa <% if(folder.open){ %>fa-folder-open<% }else{ %>fa-folder<% } %>"></i>
        </div>
        <% if(folder.unread_count > 0) { %>
          <b><%= folder.title %></b>
        <% }else{ %>
          <%= folder.title %>
        <% } %>
      </div>
    </div>
    <div class="btn-group folderMenu hide">
      <a class="btn btn-default markFolderReadAction" title="#{t.buttons.mark_all_read}"><i class="fa fa-eye"></i></a>
      <a class="btn btn-default markFolderUnreadAction" title="#{t.buttons.mark_all_unread}"><i class="fa fa-eye-slash"></i></a>
      <a class="btn btn-default syncFolderAction" title="#{t.buttons.sync}"><i class="fa fa-refresh"></i></a>
      <a class="btn btn-default editFolderAction" title="#{t.buttons.edit}"><i class="fa fa-edit"></i></a>
      <a class="btn btn-default deleteFolderAction" title="#{t.buttons.delete}"><i class="fa fa-trash-o"></i></a>
    </div>
    <ul class="list-unstyled"></ul>
  </script>
